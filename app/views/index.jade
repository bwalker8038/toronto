html
  head
    title Toronto Messager
    link(href='app.css', media='all', rel='stylesheet', type='text/css')
    script(src='/jquery.min.js')
    script(src='/underscore-min.js')
    script(src='/backbone.js')
    script(src='/dnode.js')
    script(src='/dnode.backbone.js')
    script(src='/application.js')
    script(src='/markdown.converter.js')
  body
    #header
      ul#nav
        li
          h2#username #{currentUser.username}
      
      h1 Toronto


    //
       Message App Interface 
    #messageapp
      .content
        #create-message
          input#new-message(placeholder='Start a conversation', type='text')
          span.ui-tooltip-top(style='display: none;') Press Enter to save this Message
      #messages
        ul#message-list
      #message-stats

    #credits
      p Powered by Dr Pepper
    //
       Templates 
    script#item-template(type='text/template')
      <div class="display">
      <div class="message-content"></div>
      <div class="message-author"></div>
      <span class="message-destroy"></span>
      </div>
     
      </div>
    script#userData(type='text/javascript')
      var user = { user_id: '#{currentUser._id}', username: '#{currentUser.username}' }


